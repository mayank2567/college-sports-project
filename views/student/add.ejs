						function take_snapshot() {
							// take snapshot and get image data
							Webcam.snap(function (data_uri) {
								document.getElementById('photo').value = data_uri;
								// display results in page
								document.getElementById('results').innerHTML =

									'<img src="' + data_uri + '"/>';
							});
						}
						$("form").submit(function () {

							$("input:checkbox").removeAttr("disabled");

						});

						function resetChk() {
							$('input:checkbox').removeAttr('checked');
							$('input:checkbox').removeAttr('disabled');

						}
						var val;
						$(document).ready(function () {

							$(".female").css("display", "none");
							$(".male").css("display", "block");
							$("#gender").change(function () {
								if ($('option:selected', this).text() == "Male") {
									$(".female").css("display", "none");
									$(".male").css("display", "block");
								} else {
									$(".female").css("display", "none");
									$(".male").css("display", "block");
									$(".female").css("display", "block");
									$(".male").css("display", "none");
								}

								// $(".male").css("display", "none");
								// $(".male").css("display", "none");
								// if ($('input').attr('gender').val() == 'Female') {
								// 	
								// }

							});
							$(document).on('change', 'input[type="checkbox"]', function (e) {
								var selected = [],
									field = 0,
									track = 0,
									count = 0;
								$('#checkboxes input:checked').each(function () {
									selected.push($(this).attr('test'));
									if ($(this).attr('test') == 'Field') {
										field++;
									}
									if ($(this).attr('test') == 'Track') {
										track++;
									}
									if ($(this).attr('test') != 'Others') {
										count++;
									}
								});
								if (count > 2) {
									$('#checkboxes').each(function () {
										// $('.chk').prop('disabled', true);
										$('.Field').prop('disabled', true);
										$('.Track').prop('disabled', true);
									});
								} else {
									if (field > 1)
										$('#checkboxes').each(function () {
											$('.Field').prop('disabled', true);
										});
									if (track > 1)
										$('#checkboxes').each(function () {
											$('.Track').prop('disabled', true);
										});
								}
								//do your stuff here
							});

						});

						$(document).ready(function () {
							//$("#branch").children('option:gt(0)').hide();
							$("#branch > option").each(function () {
								if ($(this).attr('class') != "B.Tech")
									$(this).hide();
							});
							$("#course").change(function () {
								var branch = $('#course :selected').text()
								$("#branch > option").each(function () {

									$(this).show();
								});
								$("#branch > option").each(function () {
									if ($(this).attr('class') != branch)
										$(this).hide();
								});

							});
						});
					</script>


